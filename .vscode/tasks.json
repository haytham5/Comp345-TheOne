{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Run",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++14",
                "-Wall",
                "-g",
                "${workspaceFolder}/Map/MapDriver.cpp",
                "${workspaceFolder}/Map/Map.cpp",
                "-o",
                "${workspaceFolder}/bin/MapDriver",
                
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            },
            "detail": "Task generated by Debugger."
        },
    ]
}